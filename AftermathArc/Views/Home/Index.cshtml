@model IEnumerable<AftermathArc.Models.podcastinfo>
@{
    ViewBag.Title = "Aftermath Arc";
}
<div class="row">
    <div class="col-md-12">
        <img src="~/Images/pexels-photo-373524.jpeg" alt="imagePod" class="img-responsive" style="width:100%; height:85%;">
        <h1 class="centered" style="color:white">Aftermath Arc Podcast</h1>
    </div>
</div>

<div class="text-center" style="padding-top:0px;">
    <h1>Podcast and Blogs</h1>
</div>


@foreach (var item in Model.Reverse().Take(3))
{
<div class="container" style="padding-top:100px;">

    <h3>@item.podcastName</h3>
    <div class="row">
        <div class="col-md-12">
            <img src="@item.imagePath" alt="imagePod" class="img-responsive" style="width:100%; height:80%">
        </div>
    </div>
    <p>@item.Description</p>
    <audio style="width:100%;" controls class="embed-responsive-item">

        <source src="@Html.DisplayFor(modelItem => item.audioPath)">

    </audio>
    @Html.ActionLink("Details", "Details", "Podcast", new { id = item.ID }, null)

</div>

}


@model AftermathArc.Models.podcastinfo

@{
    ViewBag.Title = "Details";
}


<h1 class="text-center">
    @Html.DisplayFor(model => model.podcastName)
</h1>

<div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <img src="@Html.DisplayFor(model => model.imagePath)" alt="imagePod" class="img-responsive" style="width:100%; height:700px">
            </div>
        </div>
        <dl class="dl-horizontal">
            <dd>
                <br />
                <audio style="width:100%;" controls class="embed-responsive-item">
                    <source src="@Html.DisplayFor(model => model.audioPath)">
                </audio>
            </dd>
            <dt>
                <br />
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                <br />
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                <br />
                Release Date
            </dt>

            <dd>
                <br />
                @Html.DisplayFor(model => model.releaseDate)
                <hr />
            </dd>

            
            <dd>
                <br />
                @{Html.RenderAction("_DiplayComments", new { @id = Model.ID });}
            </dd>

        </dl>

        @{
            string message = TempData["Message"] as string;
            if (message != null)
            {
                <b>@message</b>
            }
        }
        @Html.Partial("_AddComments", new AftermathArc.Models.podcast_comments())

    </div>

</div>